                                android:text="@string/_0" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_6_view"
                            android:text="@string/player_6"
                            style="@style/TextView_name"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view_5_6"
                    android:visibility="gone"
                    style="@style/horizontal_view" />

                <LinearLayout
                    android:id="@+id/Layout_player_7_8"
                    android:visibility="gone"
                    style="@style/External_Layout">


                    <LinearLayout
                        android:id="@+id/player_7"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_7_score"
                                style="@style/TextView_score"
                                android:text="@string/_0"/>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_7_view"
                            android:text="@string/player_7"
                            style="@style/TextView_name"/>

                    </LinearLayout>


                    <View style="@style/senter_view" />

                    <LinearLayout
                        android:id="@+id/player_8"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_8_score"
                                style="@style/TextView_score"
                                android:text="@string/_0" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_8_view"
                            android:text="@string/player_8"
                            style="@style/TextView_name" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view_7_8"
                    android:visibility="gone"
                    style="@style/horizontal_view" />

                <LinearLayout
                    android:id="@+id/Layout_player_9_10"
                    android:visibility="gone"
                    style="@style/External_Layout">


                    <LinearLayout
                        android:id="@+id/player_9"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_9_score"
