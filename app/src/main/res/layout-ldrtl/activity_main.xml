                                android:text="@string/_0" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_5_view"
                            android:text="@string/player_5"
                            style="@style/TextView_name" />

                    </LinearLayout>


                    <View style="@style/senter_view" />

                    <LinearLayout
                        android:id="@+id/player_6"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_6_score"
