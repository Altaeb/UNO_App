<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:fillViewport="true"
        >


        <RelativeLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor">

            <LinearLayout
                android:id="@+id/main_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_80"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    fab:srcCompat="@drawable/uno" />

                <LinearLayout
                    android:id="@+id/Layout_player_1_2"
                    style="@style/External_Layout">

                    <LinearLayout
                        android:id="@+id/player_1"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_1_score"
                                android:text="@string/_0"
                                style="@style/TextView_score" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_1_view"
                            android:text="@string/player_1"
                            style="@style/TextView_name" />

                    </LinearLayout>

                    <View style="@style/senter_view" />

                    <LinearLayout
                        android:id="@+id/player_2"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_2_score"
                                style="@style/TextView_score"
                                android:text="@string/_0" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_2_view"
                            android:text="@string/player_2"
                            style="@style/TextView_name" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view_1_2"
                    style="@style/horizontal_view" />

                <LinearLayout
                    android:id="@+id/Layout_player_3_4"
                    android:visibility="gone"
                    style="@style/External_Layout">


                    <LinearLayout
                        android:id="@+id/player_3"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_3_score"
                                style="@style/TextView_score"
                                android:text="@string/_0" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_3_view"
                            android:text="@string/player_3"
                            style="@style/TextView_name" />

                    </LinearLayout>


                    <View style="@style/senter_view" />

                    <LinearLayout
                        android:id="@+id/player_4"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10">

                            <TextView
                                android:id="@+id/player_4_score"
                                style="@style/TextView_score"
                                android:text="@string/_0" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/player_4_view"
                            android:text="@string/player_4"
                            style="@style/TextView_name" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view_3_4"
                    android:visibility="gone"
                    style="@style/horizontal_view" />

                <LinearLayout
                    android:id="@+id/Layout_player_5_6"
                    android:visibility="gone"
                    style="@style/External_Layout">


                    <LinearLayout
                        android:id="@+id/player_5"
                        style="@style/singl_layout">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
