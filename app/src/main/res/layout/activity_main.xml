            android:src="@drawable/fab_add"
            fab:fab_colorNormal="#D81B60"
            fab:fab_colorPressed="#D81B60"
            fab:fab_label="Two Players"
            fab:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>

